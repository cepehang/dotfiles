# vim: filetype=neomuttrc
source /usr/local/share/mutt-wizard/mutt-wizard.muttrc # mw-autogenerated
source /home/dnguyen/.config/mutt/accounts/1-polyconseil.muttrc # mw-autogenerated

set date_format="%d/%m/%y %H:%M"
set sort = threads
set sort_aux = last-date-received

# copied from webgefrickel (https://webgefrickel.de/blog/a-modern-mutt-setup-part-two)
set timeout = 3
set quote_regex = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"

# compose view options
set edit_headers
set use_envelope_from
set editor = "nvim"
set text_flowed

# pager view options
set pager_index_lines = 10
set pager_context = 3
set menu_scroll

# Save all attachments
macro pager S "<pipe-message> ripmime -i - -d ~/Downloads && rm ~/Downloads/textfile*" "Save all non-text attachments using ripmime"

